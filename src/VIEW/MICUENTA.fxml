<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="CONTROLLER.MICUENTAController"
            style="-fx-background-color: #f2f2f2;">

    <!-- BARRA SUPERIOR -->
    <top>
        <HBox style="-fx-background-color: #1a1a1a; -fx-padding: 15;" alignment="CENTER">
            <ImageView fitWidth="40" fitHeight="40">
                <Image url="@../IMAGENES/LOGO2.png"/>
            </ImageView>

            <Label text="JSHOP"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 0 10;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="🏠 Catálogo" onAction="#irACatalogo"
                    style="-fx-background-color: #333333; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"/>
            <Button text="🛒 Carrito" onAction="#irACarrito"
                    style="-fx-background-color: #4d4d4d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"/>
            <Button text="👤 Mi Cuenta"
                    style="-fx-background-color: #666666; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"/>
        </HBox>
    </top>

    <!-- CONTENIDO PRINCIPAL -->
    <center>
        <HBox spacing="40" alignment="CENTER" style="-fx-padding: 40;">
        
            <!-- COLUMNA IZQUIERDA: Datos del usuario -->
            <VBox spacing="20"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 30;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.3, 0, 2);"
                  prefWidth="300"
                  alignment="TOP_CENTER">

                <ImageView fitWidth="100" fitHeight="100">
                    <Image url="@../IMAGENES/usuario_default.png"/>
                </ImageView>

                <Label fx:id="lblUsername"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />

                <VBox spacing="10" alignment="CENTER_LEFT">
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Label text="📅 Fecha de Registro:" style="-fx-font-size: 13px; -fx-text-fill: #666;" />
                        <Label fx:id="lblFechaRegistro" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                    </HBox>
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Label text="📧 Correo:" style="-fx-font-size: 13px; -fx-text-fill: #666;" />
                        <Label fx:id="lblCorreo" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                    </HBox>
                </VBox>
            </VBox>

            <!-- COLUMNA DERECHA: Historial -->
            <VBox spacing="10" alignment="TOP_LEFT"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 6, 0.3, 0, 1);"
                  prefWidth="500" VBox.vgrow="ALWAYS">

                <Label text="🧾 Historial de Compras"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />

                <ListView fx:id="listaHistorial"
                          style="-fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;"
                          VBox.vgrow="ALWAYS"
                          prefHeight="400"
                          maxWidth="Infinity"/>
            </VBox>

        </HBox>
    </center>



    <!-- BARRA INFERIOR -->
    <bottom>
        <HBox style="-fx-background-color: #1a1a1a; -fx-padding: 10;" alignment="CENTER">
            <Label text="© 2025 JSHOP - Todos los derechos reservados" style="-fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Cerrar Sesión"
                    onAction="#cerrarSesion"
                    style="-fx-text-fill: white; -fx-background-color: transparent;
                           -fx-border-color: white; -fx-border-radius: 5; -fx-padding: 5 10;"/>
        </HBox>
    </bottom>
</BorderPane>
