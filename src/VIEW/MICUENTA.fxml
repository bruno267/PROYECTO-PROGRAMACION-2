<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="CONTROLLER.MICUENTAController"
            style="-fx-background-color: #f2f2f2;">

    <!-- BARRA SUPERIOR -->
    <top>
        <HBox style="-fx-background-color: #1a1a1a; -fx-padding: 15;" alignment="CENTER">
            <ImageView fitWidth="40" fitHeight="40">
                <Image url="@../IMAGENES/LOGO2.png"/>
            </ImageView>

            <Label text="JSHOP"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 0 10;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="🏠 Catálogo" onAction="#irACatalogo"
                    style="-fx-background-color: #333333; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"/>
            <Button text="🛒 Carrito" onAction="#irACarrito"
                    style="-fx-background-color: #4d4d4d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"/>
            <Button text="👤 Mi Cuenta"
                    style="-fx-background-color: #666666; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"/>
        </HBox>
    </top>

    <!-- CONTENIDO PRINCIPAL -->
    <center>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <VBox spacing="20"
                  style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;"
                  prefWidth="700">

                <Label text="👤 MI CUENTA"
                       style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 10 0;"/>

                <TitledPane text="Información del Usuario" expanded="true">
                    <content>
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="👤" style="-fx-font-size: 16px;"/>
                                <Label fx:id="lblUsername" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                            </HBox>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="📅" style="-fx-font-size: 16px;"/>
                                <Label fx:id="lblFechaRegistro" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                            </HBox>
                        </VBox>
                    </content>
                </TitledPane>

                <TitledPane text="Historial de Compras" expanded="true">
                    <content>
                        <ListView fx:id="listaHistorial"
                                  style="-fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;"/>
                    </content>
                </TitledPane>

            </VBox>
        </HBox>
    </center>

    <!-- BARRA INFERIOR -->
    <bottom>
        <HBox style="-fx-background-color: #1a1a1a; -fx-padding: 10;" alignment="CENTER">
            <Label text="© 2025 JSHOP - Todos los derechos reservados" style="-fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Cerrar Sesión"
                    onAction="#cerrarSesion"
                    style="-fx-text-fill: white; -fx-background-color: transparent;
                           -fx-border-color: white; -fx-border-radius: 5; -fx-padding: 5 10;"/>
        </HBox>
    </bottom>
</BorderPane>
