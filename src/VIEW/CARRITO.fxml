<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="CONTROLLER.CARRITOController" style="-fx-background-color: #f5f5f5;">

    <!-- BARRA SUPERIOR -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" alignment="CENTER">
            <ImageView fitWidth="40" fitHeight="40">
                <Image url="@../IMAGENES/LOGO2.png"/>
            </ImageView>
            
            <Label text="JSHOP" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 0 10;"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Button text="🏠 Catálogo" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#irACatalogo"/>
            <Button text="★ Favoritos" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"/>
            <Button text="👤 Mi Cuenta" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="20" style="-fx-padding: 20;">
            <!-- Lista de productos en el carrito -->
            <VBox fx:id="contenedorItems" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;" prefWidth="600">
                <Label text="MI CARRITO" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>
                <VBox fx:id="itemsCarrito" spacing="15"/>
            </VBox>

            <!-- Resumen de la compra -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;" spacing="15" prefWidth="250">
                <Label text="RESUMEN COMPRA" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <HBox>
                    <Label text="PRODUCTOS (" fx:id="lblCantidad" style="-fx-font-weight: bold;"/>
                    <Label text=")" style="-fx-font-weight: bold;"/>
                </HBox>
                <Label fx:id="lblTotal" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Button text="REALIZAR COMPRA" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-font-size: 16px;" onAction="#realizarCompra"/>
            </VBox>
        </HBox>
    </center>

    <!-- BARRA INFERIOR -->
    <bottom>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 10;" alignment="CENTER">
            <Label text="© 2025 JSHOP - Todos los derechos reservados" style="-fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Cerrar Sesión" style="-fx-text-fill: white; -fx-background-color: transparent; -fx-border-color: white; -fx-border-radius: 5;"/>
        </HBox>
    </bottom>
</BorderPane>