<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="CONTROLLER.CARRITOController"
            style="-fx-background-color: #f2f2f2;">

    <!-- BARRA SUPERIOR -->
    <top>
        <HBox style="-fx-background-color: #1a1a1a; -fx-padding: 15;" alignment="CENTER">
            <ImageView fitWidth="40" fitHeight="40">
                <Image url="@../IMAGENES/LOGO2.png"/>
            </ImageView>

            <Label text="JSHOP"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 0 10;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="ðŸ  CatÃ¡logo" onAction="#irACatalogo"
                    style="-fx-background-color: #333333; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"/>

            <Button text="â˜… Favoritos" onAction="#irAFavoritos"
                    style="-fx-background-color: #4d4d4d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"/>

            <Button text="ðŸ‘¤ Mi Cuenta" onAction="#irAMiCuenta"
                                style="-fx-background-color: #666666; -fx-text-fill: white; -fx-font-weight: bold;
               -fx-background-radius: 5; -fx-padding: 5 10;"/>
        </HBox>
    </top>

    <!-- CONTENIDO PRINCIPAL -->
    <center>
        <HBox spacing="20" style="-fx-padding: 20;">
            <!-- Lista de productos en el carrito -->
            <VBox fx:id="contenedorItems"
                  spacing="10"
                  style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;"
                  prefWidth="600">
                <Label text="MI CARRITO"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>

                <ScrollPane fitToWidth="true" prefHeight="400" style="-fx-background-color: transparent;">
                    <VBox fx:id="itemsCarrito" spacing="15"/>
                </ScrollPane>
            </VBox>

            <!-- Resumen de la compra -->
            <VBox spacing="15"
                  style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;"
                  prefWidth="250">
                <Label text="RESUMEN COMPRA" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
                <HBox>
                    <Label text="PRODUCTOS (" fx:id="lblCantidad" style="-fx-font-weight: bold;"/>
                    <Label text=")" style="-fx-font-weight: bold;"/>
                </HBox>
    
                <!-- Detalle de productos: ahora antes del total -->
                <VBox fx:id="resumenDetalle" spacing="5"/>
    
                <!-- Total de la compra -->
                <Label fx:id="lblTotal" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    
                <Button text="REALIZAR COMPRA"
                        onAction="#realizarCompra"
                        style="-fx-background-color: #1a1a1a; -fx-text-fill: white; -fx-font-weight: bold;
                   -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 16px;"/>
            </VBox>

        </HBox>
    </center>

    <!-- BARRA INFERIOR -->
    <bottom>
        <HBox style="-fx-background-color: #1a1a1a; -fx-padding: 10;" alignment="CENTER">
            <Label text="Â© 2025 JSHOP - Todos los derechos reservados" style="-fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Cerrar SesiÃ³n"
                    onAction="#cerrarSesion"
                    style="-fx-text-fill: white; -fx-background-color: transparent;
                           -fx-border-color: white; -fx-border-radius: 5; -fx-padding: 5 10;"/>
        </HBox>
    </bottom>
</BorderPane>
