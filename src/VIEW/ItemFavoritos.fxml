<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="CONTROLLER.ItemFavoritoController" 
      style="-fx-background-color: #f9f9f9; -fx-background-radius: 5; -fx-padding: 10;" 
      spacing="10" alignment="CENTER_LEFT">

    <ImageView fx:id="imgProducto" fitWidth="60" fitHeight="60" />
    <VBox spacing="5">
        <Label fx:id="lblNombre" style="-fx-font-weight: bold;" wrapText="true" maxWidth="300"/>
        <Label fx:id="lblPrecio" style="-fx-text-fill: #666;"/>
    </VBox>
    <Region HBox.hgrow="ALWAYS"/>
    <Button fx:id="btnAgregarCarrito" text="Agregar al carrito" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#agregarAlCarrito"/>
    <Button fx:id="btnEliminar" text="Eliminar" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#eliminarProducto"/>
</HBox>